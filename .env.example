"""
CoreSense AI Platform - Simplified Environment Configuration
Clean configuration following YAGNI principles
"""

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================

# Environment mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application server
HOST=0.0.0.0
PORT=8501

# ==============================================
# FEATURE FLAGS (Enable only what you need)
# ==============================================

# Core features
ENABLE_AUTH=true
ENABLE_SENSORS=false
ENABLE_AGENTS=false
ENABLE_METRICS=false

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Simple SQLite for development (change for production)
DATABASE_URL=sqlite:///./coresense.db

# ==============================================
# SECURITY SETTINGS
# ==============================================

# JWT Secret Key - CHANGE IN PRODUCTION!
JWT_SECRET_KEY=change-me-in-production-use-secrets-token_urlsafe
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Basic security
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

# Leave empty to disable email features
SMTP_SERVER=
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@coresense.ai

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# OpenAI API (only if AI features needed)
OPENAI_API_KEY=

# ==============================================
# STREAMLIT SPECIFIC
# ==============================================

STREAMLIT_THEME_PRIMARY_COLOR=#6C63FF
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF"""

# CoreSense Authentication Environment Configuration
# Copy this file to .env and update the values for your environment

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL - supports SQLite, PostgreSQL, MySQL
# For development (SQLite):
DATABASE_URL=sqlite:///./coresense_auth.db

# For production (PostgreSQL example):
# DATABASE_URL=postgresql://username:password@localhost:5432/coresense_db

# Database pool settings (for PostgreSQL/MySQL)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enable SQL query logging (set to 'true' for development only)
DB_ECHO=false

# ==============================================
# JWT AND SECURITY CONFIGURATION
# ==============================================

# JWT Secret Key - MUST BE CHANGED IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secure-secret-key-change-in-production

# JWT Token expiration times
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session configuration
SESSION_EXPIRE_HOURS=24
MAX_CONCURRENT_SESSIONS=5
SESSION_REFRESH_THRESHOLD_MINUTES=15

# Security settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_RESET_EXPIRE_HOURS=1
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Rate limiting
MAX_PASSWORD_RESET_REQUESTS_PER_HOUR=3
MAX_EMAIL_VERIFICATION_REQUESTS_PER_HOUR=5

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Settings - Configure for your email provider
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email addresses
FROM_EMAIL=noreply@coresense.ai
FROM_NAME=CoreSense AI Platform
REPLY_TO=support@coresense.ai

# Application URLs
FRONTEND_URL=http://localhost:8501

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================

# Environment mode
ENVIRONMENT=development
# Options: development, staging, production

# Debug mode
DEBUG=true

# Logging level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================
# STREAMLIT CONFIGURATION
# ==============================================

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=false

# Streamlit UI settings
STREAMLIT_THEME_PRIMARY_COLOR=#6C63FF
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6
STREAMLIT_THEME_TEXT_COLOR=#262730

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis for session storage (optional - for production scaling)
# REDIS_URL=redis://localhost:6379/0

# ==============================================
# PREMIUM FEATURES (Optional)
# ==============================================

# Stripe payment processing (for premium subscriptions)
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Subscription plans
PREMIUM_MONTHLY_PRICE=9.99
PREMIUM_QUARTERLY_PRICE=24.99
PREMIUM_YEARLY_PRICE=89.99

# ==============================================
# CORS AND SECURITY HEADERS
# ==============================================

# CORS settings
CORS_ORIGINS=http://localhost:8501,https://your-domain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Security headers
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_FRAME_DENY=true

# ==============================================
# FILE STORAGE (Optional)
# ==============================================

# Local file storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# AWS S3 (optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1

# ==============================================
# MONITORING AND ANALYTICS (Optional)
# ==============================================

# Application monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# Performance monitoring
ENABLE_PROFILING=false
PROFILING_SAMPLE_RATE=0.1